<%- include('header') %>

<div class="container" style="width: 80%; margin-top:10%; margin-left: 20%;">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-success">Create news post</h1>
        <a href="/api/5f73231390cf343bec38e4f1/news/all" class="btn btn-primary ">Show all news posts</a>
    </div>

    <form method="POST" action="/api/5f73231390cf343bec38e4f1/news/all" enctype="multipart/form-data">

        <!-- <button class="btn btn-success mt-5 mb-2" data-toggle="modal" data-target="#myModal">
            Upload image
        </button><br> -->

        <input type="file" name="file">

        <div for="title" class="form-group">
            <label>Title</label>
            <input id="title" name="title" class="form-control" placeholder="title" required>
        </div>

        <div for="content_1" class="form-group">
            <label>Content_1</label>
            <textarea name="content_1" id="content_1" class="form-control" rows="5"></textarea>
        </div>

        <div for="content_2" class="form-group">
            <label>Content_2</label>
            <textarea name="content_2" id="content_2" class="form-control" rows="5"></textarea>
        </div>

        <div for="content_3" class="form-group">
            <label>Content_3</label>
            <textarea name="content_3" id="content_3" class="form-control" rows="5"></textarea>
        </div>

        <div for="date" class="form-group">
            <label>Sanani kiriting (for example:15-aug 2020)</label>
            <textarea id="date" name="date" class="form-control" placeholder="date"></textarea>
        </div>
        <div class="container">
        </div>

        <input type="submit" class="btn btn-success" value="Post">
    </form>
</div>



